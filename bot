import os
import random
import discord
from discord.ext import commands

intents = discord.Intents.default()
intents.message_content = True

bot = commands.Bot(command_prefix='$', intents=intents)

@bot.event
async def on_ready():
    print(f'Logged in as {bot.user.name} - {bot.user.id}')
    print('------')
    

    available_commands = [
        "1. `$hello`: Say hello to the bot.",
        "2. `$recycling_info`: Learn about waste recycling and its importance.",
        "3. `$recycled_items`: Discover what items can be made from recycled materials.",
        "4. `$what_i_need_to_save_world`: Find out how you can contribute to a cleaner world.",
    ]
    

    welcome_message = (
        f"Hello! I'm your recycling bot. Here are some of the commands you can use:\n"
        "\n".join(available_commands)
    )

    for guild in bot.guilds:
        default_channel = guild.text_channels[0]
        await default_channel.send(welcome_message)

@bot.command()
async def hello(ctx):
    greeting_message = "Привет! Я могу помочь вам с информацией о переработке отходов."
    await ctx.send(greeting_message)

@bot.command()
async def recycling_info(ctx):
    recycling_message = (
        "Переработка отходов - это важная практика, которая помогает сократить количество отходов в нашем мире. "
        "Это включает в себя сбор и обработку материалов, которые в противном случае были бы выброшены как мусор, "
        "такие как бумага, стекло, пластик и металл, и превращены в новые продукты. "
        "Вторичная переработка позволяет экономить природные ресурсы, снижает потребление энергии и сводит к минимуму "
        "воздействие утилизации отходов на окружающую среду. "
        "Перерабатывая отходы, мы можем внести свой вклад в более устойчивое и экологичное будущее нашей планеты. Каждое маленькое усилие имеет значение!"
    )
    await ctx.send(recycling_message)

@bot.command()
async def recycled_items(ctx):
    items_list = [
        "Переработанная бумага: новые газеты, картон и офисная бумага",
        "Переработанное стекло: новые стеклянные бутылки и банки",
        "Переработанный пластик: новые пластиковые бутылки, контейнеры и одежда",
        "Переработанный металл: новые алюминиевые банки и изделия из стали",
        "Переработанная электроника: новые электронные устройства и компоненты",
        "Переработанные шины: прорезиненный асфальт, покрытия для детских площадок и многое другое!"
    ]
    
    items_message = "Из переработанных материалов можно получить следующие предметы:\n"
    items_message += "\n".join([f"- {item}" for item in items_list])

    await ctx.send(items_message)

@bot.command()
async def what_i_need_to_save_world(ctx):
    cleanup_message = (
        "Чтобы спасти мир, вы можете:\n"
        "1. Сортировать отходы и участвовать в программе переработки.\n"
        "2. Меньше использовать одноразовые пластиковые изделия.\n"
        "3. Поддерживать и участвовать в мероприятиях по уборке мусора в вашем районе.\n"
        "4. Экономить воду и энергию в повседневной жизни.\n"
        "5. Распространять информацию о важности охраны окружающей среды."
    )
    await ctx.send(cleanup_message)

bot.run('MTE0NDk2MDA4OTk1OTE5MDY2OA.GdEE61.nRS8uCUaMcsxTrWk2qXLX5WGp3v_BLOIKzNUIQ')
